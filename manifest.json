{
  "name": "Curiosity",
  "description": "Maximize your rabbit holes",
  "version": "1.0",
  "manifest_version": 3,
  "permissions": [
    "tabs",
    "contextMenus",
    "scripting",
    "storage",
    "readingList"
  ],
  "action": {
    "default_title": "Curiosity"
  },
  "options_page": "options.html",
  "background": {
    "service_worker": "background.js"
  },
  "commands": {
    "create-search-tab": {
      "suggested_key": {
        "default": "Alt+T"
      },
      "description": "Create a new search tab"
    },
    "search-on-exa": {
      "suggested_key": {
        "default": "Alt+E"
      },
      "description": "Search on Exa"
    },
    "add-to-reading-list": {
      "suggested_key": {
        "default": "Alt+R"
      },
      "description": "Add to reading list"
    }
  }
}
